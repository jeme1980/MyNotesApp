@model MyNotesApp.ViewModel.UpdateVM

@{
    ViewData["Title"] = "Update";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input hidden asp-for="ImageFile" class="form-control" />

                    <div class="mb-3">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="GenderId" class="control-label"></label>
                        <select asp-for="GenderId" asp-items="ViewBag.GenderId" class="form-select"></select>
                        <span asp-validation-for="GenderId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="HoppyId" class="control-label"></label>
                        <select asp-for="HoppyId" asp-items="ViewBag.hoppyid" multiple class="form-select"></select>
                        <span asp-validation-for="HoppyId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">uploud file</label>
                        <input class="form-control" type="file" asp-for="file">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
