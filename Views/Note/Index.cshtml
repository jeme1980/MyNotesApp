@model IEnumerable<Note>
@{
    ViewData["Title"] = "הערות שלי";
}
<section>
    <div class="container">
        <partial name="_CreateBtn"></partial>
        @if (Model.Any())
        {
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@item.CreatedDate?.ToString("dd-MM-yyyy")</h6>
                                <p class="card-text">@item.Description</p>
                                <a asp-controller="Note" asp-action="Edit" asp-route-id="@item.Id" class="card-link">ערוך</a>
                                <a asp-controller="Note" asp-action="Delete" onclick="return confirm('delete it ? ....')" asp-route-id="@item.Id" class="card-link">מחק</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>no data</p>
        }
    </div>
</section>
